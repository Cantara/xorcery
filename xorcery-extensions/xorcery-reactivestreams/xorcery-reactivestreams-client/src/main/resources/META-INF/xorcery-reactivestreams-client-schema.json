{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/dev.xorcery/xorcery-reactivestreams-client/schema",
  "title" : "xorcery-reactivestreams-client configuration JSON Schema",
  "properties" : {
    "reactivestreams" : {
      "$ref" : "#/$defs/reactivestreams"
    }
  },
  "$defs" : {
    "reactivestreams" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "client" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ jetty.client.enabled }}",
              "description" : "Default: {{ jetty.client.enabled }} (true)"
            },
            "connectTimeout" : {
              "type" : "string",
              "default" : "{{ defaults.connectTimeout }}",
              "description" : "Default: {{ defaults.connectTimeout }} (5s)"
            },
            "idleTimeout" : {
              "type" : "string",
              "default" : "{{ defaults.idleTimeout }}",
              "description" : "Default: {{ defaults.idleTimeout }} (-1s)"
            },
            "autoFragment" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "maxTextMessageSize" : {
              "type" : [ "number", "string" ],
              "default" : 1048576,
              "description" : "Default: 1048576"
            },
            "maxBinaryMessageSize" : {
              "type" : [ "number", "string" ],
              "default" : 1048576,
              "description" : "Default: 1048576"
            },
            "maxFrameSize" : {
              "type" : [ "number", "string" ],
              "default" : 65536,
              "description" : "Default: 65536"
            },
            "inputBufferSize" : {
              "type" : [ "number", "string" ],
              "default" : 4096,
              "description" : "Default: 4096"
            },
            "outputBufferSize" : {
              "type" : [ "number", "string" ],
              "default" : 4096,
              "description" : "Default: 4096"
            }
          }
        }
      }
    }
  }
}