{
  "$id" : "http://xorcery.dev/applications/dev.xorcery/xorcery-certificates-spi/override-schema",
  "title" : "xorcery-certificates-spi configuration override JSON Schema",
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "properties" : {
    "instance" : {
      "$ref" : "#/$defs/instance"
    },
    "application" : {
      "$ref" : "#/$defs/application"
    },
    "system" : {
      "$ref" : "#/$defs/system"
    },
    "defaults" : {
      "$ref" : "#/$defs/defaults"
    },
    "hk2" : {
      "$ref" : "#/$defs/hk2"
    },
    "DefaultRunLevelContext" : {
      "$ref" : "#/$defs/DefaultRunLevelContext"
    },
    "configuration" : {
      "$ref" : "#/$defs/configuration"
    },
    "keystores" : {
      "$ref" : "#/$defs/keystores"
    },
    "secrets" : {
      "$ref" : "#/$defs/secrets"
    },
    "log4j2" : {
      "$ref" : "#/$defs/log4j2"
    }
  },
  "$defs" : {
    "instance" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string",
          "default" : "{{ instance.host}}.{{ application.name}}",
          "description" : "Default: {{ instance.host}}.{{ application.name}} (service.application)"
        },
        "host" : {
          "type" : "string",
          "default" : "{{ CALCULATED.hostName }}",
          "description" : "Default: {{ CALCULATED.hostName }} (service)"
        },
        "fqdn" : {
          "type" : "string",
          "default" : "{{ instance.host }}.{{ instance.domain }}",
          "description" : "Default: {{ instance.host }}.{{ instance.domain }} (service.xorcery.test)"
        },
        "ip" : {
          "type" : "string",
          "default" : "{{ CALCULATED.ip | null }}",
          "description" : "Default: {{ CALCULATED.ip | null }} (192.168.0.2)"
        },
        "domain" : {
          "type" : "string",
          "default" : "xorcery.test",
          "description" : "Default: xorcery.test"
        },
        "environment" : {
          "type" : "string",
          "default" : "development",
          "description" : "Default: development"
        },
        "tags" : {
          "type" : [ "array", "string" ]
        },
        "home" : {
          "type" : "string",
          "default" : "{{ SYSTEM.user_dir }}",
          "description" : "Default: {{ SYSTEM.user_dir }} ({{ SYSTEM.user_dir }})"
        },
        "resources" : {
          "type" : "string",
          "default" : "{{ instance.home }}",
          "description" : "Default: {{ instance.home }} ({{ instance.home }})"
        },
        "uri" : {
          "type" : "string",
          "default" : "http://{{ instance.fqdn }}/",
          "description" : "Default: http://{{ instance.fqdn }}/ (http://service.xorcery.test/)"
        },
        "api" : {
          "type" : "string",
          "default" : "{{ instance.uri }}api/",
          "description" : "Default: {{ instance.uri }}api/ (http://service.xorcery.test/api/)"
        },
        "locale" : {
          "default" : null,
          "description" : "Default: null"
        },
        "timeZone" : {
          "default" : null,
          "description" : "Default: null"
        }
      }
    },
    "application" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "default" : "application",
          "description" : "Default: application"
        },
        "version" : {
          "type" : "string",
          "default" : "unknown",
          "description" : "Default: unknown"
        }
      }
    },
    "system" : {
      "type" : "object",
      "additionalProperties" : true,
      "properties" : { }
    },
    "defaults" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "connectTimeout" : {
          "type" : "string",
          "default" : "5s",
          "description" : "Default: 5s"
        },
        "idleTimeout" : {
          "type" : "string",
          "default" : "-1s",
          "description" : "Default: -1s"
        },
        "development" : {
          "type" : [ "boolean", "string" ],
          "default" : false,
          "description" : "Default: false"
        }
      }
    },
    "hk2" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "threadPolicy" : {
          "type" : "string",
          "default" : "FULLY_THREADED",
          "description" : "Default: FULLY_THREADED"
        },
        "threadCount" : {
          "type" : [ "number", "string" ],
          "default" : 1,
          "description" : "Default: 1"
        },
        "runLevel" : {
          "type" : [ "number", "string" ],
          "default" : 20,
          "description" : "Default: 20"
        },
        "immediateScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "state" : {
              "type" : "string",
              "default" : "RUNNING",
              "description" : "Default: RUNNING"
            }
          }
        },
        "threadScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            }
          }
        },
        "names" : {
          "type" : [ "array", "string" ]
        }
      }
    },
    "DefaultRunLevelContext" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    },
    "configuration" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "validation" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            }
          }
        }
      }
    },
    "keystores" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "defaultPassword" : {
          "type" : "string",
          "default" : "secret:password",
          "description" : "Default: secret:password"
        },
        "stores" : {
          "type" : [ "array", "string" ],
          "items" : {
            "properties" : {
              "name" : {
                "type" : "string"
              },
              "path" : {
                "type" : "string"
              },
              "password" : {
                "type" : "string"
              },
              "addRootCa" : {
                "type" : [ "boolean", "string" ],
                "default" : false
              },
              "template" : {
                "type" : [ "string", "null" ]
              }
            }
          }
        }
      }
    },
    "secrets" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "keystore" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{secrets.enabled}}",
              "description" : "Default: {{secrets.enabled}} (true)"
            },
            "name" : {
              "type" : "string",
              "default" : "secrets",
              "description" : "Default: secrets"
            }
          }
        },
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{defaults.enabled}}",
          "description" : "Default: {{defaults.enabled}} (true)"
        },
        "default" : {
          "type" : "string",
          "default" : "secret",
          "description" : "Default: secret"
        },
        "env" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ secrets.enabled }}",
              "description" : "Default: {{ secrets.enabled }} ({{ secrets.enabled }})"
            }
          }
        },
        "system" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ secrets.enabled }}",
              "description" : "Default: {{ secrets.enabled }} ({{ secrets.enabled }})"
            }
          }
        }
      }
    },
    "log4j2" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "Configuration" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "name" : {
              "type" : "string",
              "default" : "Xorcery",
              "description" : "Default: Xorcery"
            },
            "status" : {
              "type" : "string",
              "default" : "warn",
              "description" : "Default: warn",
              "enum" : [ "trace", "debug", "info", "warn", "error" ]
            },
            "properties" : {
              "type" : "object",
              "additionalProperties" : true,
              "properties" : { }
            },
            "thresholdFilter" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "level" : {
                  "type" : "string",
                  "default" : "info",
                  "description" : "Default: info",
                  "enum" : [ "trace", "debug", "info", "warn", "error" ]
                }
              }
            },
            "appenders" : {
              "type" : "object",
              "additionalProperties" : true,
              "properties" : { }
            },
            "Loggers" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "logger" : {
                  "type" : [ "array", "string" ],
                  "items" : {
                    "properties" : {
                      "name" : {
                        "type" : "string"
                      },
                      "level" : {
                        "type" : "string",
                        "enum" : [ "trace", "debug", "info", "warn", "error" ]
                      },
                      "additivity" : {
                        "type" : "boolean"
                      },
                      "AppenderRef" : {
                        "type" : [ "array", "string" ]
                      }
                    }
                  }
                },
                "Root" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "level" : {
                      "type" : "string",
                      "default" : "info",
                      "description" : "Default: info",
                      "enum" : [ "trace", "debug", "info", "warn", "error" ]
                    },
                    "AppenderRef" : {
                      "type" : [ "array", "string" ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}