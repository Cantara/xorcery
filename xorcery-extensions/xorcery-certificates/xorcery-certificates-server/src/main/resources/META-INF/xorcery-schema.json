{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-certificates-server/schema",
  "title" : "xorcery-certificates-server configuration JSON Schema",
  "properties" : {
    "certificates" : {
      "$ref" : "#/$defs/certificates"
    }
  },
  "$defs" : {
    "certificates" : {
      "type" : "object",
      "properties" : {
        "server" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
            },
            "authorization" : {
              "type" : "string",
              "default" : "none",
              "description" : "Default: none"
            }
          }
        }
      }
    }
  }
}