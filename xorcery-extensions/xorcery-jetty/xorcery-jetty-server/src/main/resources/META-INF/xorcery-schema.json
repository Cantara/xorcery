{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-jetty-server/schema",
  "title" : "xorcery-jetty-server configuration JSON Schema",
  "properties" : {
    "jetty" : {
      "$ref" : "#/$defs/jetty"
    }
  },
  "$defs" : {
    "jetty" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "server" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} (true)"
            },
            "scheme" : {
              "type" : "string",
              "default" : "{{ jetty.server.ssl.enabled ? \"https\" | \"http\" }}",
              "description" : "Default: {{ jetty.server.ssl.enabled ? \"https\" | \"http\" }} (https)"
            },
            "port" : {
              "type" : [ "number", "string" ],
              "default" : "{{ jetty.server.ssl.enabled ? jetty.server.ssl.port | jetty.server.http.port }}",
              "description" : "Default: {{ jetty.server.ssl.enabled ? jetty.server.ssl.port | jetty.server.http.port }} (443)"
            },
            "uri" : {
              "type" : "string",
              "default" : "{{jetty.server.scheme}}://{{instance.fqdn}}:{{jetty.server.port}}/",
              "description" : "Default: {{jetty.server.scheme}}://{{instance.fqdn}}:{{jetty.server.port}}/ (https://service.xorcery.test:443/)"
            },
            "minThreads" : {
              "type" : [ "number", "string" ],
              "default" : 10,
              "description" : "Default: 10"
            },
            "maxThreads" : {
              "type" : [ "number", "string" ],
              "default" : 150,
              "description" : "Default: 150"
            },
            "outputBufferSize" : {
              "type" : [ "number", "string" ],
              "default" : 32768,
              "description" : "Default: 32768"
            },
            "requestHeaderSize" : {
              "type" : [ "number", "string" ],
              "default" : 16384,
              "description" : "Default: 16384"
            },
            "idleTimeout" : {
              "type" : "string",
              "default" : "{{ defaults.idleTimeout }}",
              "description" : "Default: {{ defaults.idleTimeout }} (-1s)"
            },
            "http" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                },
                "port" : {
                  "type" : [ "number", "string" ],
                  "default" : 80,
                  "description" : "Default: 80"
                }
              }
            },
            "http2" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                }
              }
            },
            "ssl" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                },
                "port" : {
                  "type" : [ "number", "string" ],
                  "default" : 443,
                  "description" : "Default: 443"
                },
                "trustAll" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                },
                "needClientAuth" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                },
                "wantClientAuth" : {
                  "type" : [ "boolean", "string" ],
                  "default" : true,
                  "description" : "Default: true"
                },
                "sniRequired" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                },
                "sniHostCheck" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                },
                "alias" : {
                  "type" : "string",
                  "default" : "self",
                  "description" : "Default: self"
                }
              }
            },
            "srv" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "priority" : {
                  "type" : [ "number", "string" ],
                  "default" : 2,
                  "description" : "Default: 2"
                },
                "weight" : {
                  "type" : [ "number", "string" ],
                  "default" : 100,
                  "description" : "Default: 100"
                }
              }
            },
            "log4j2" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                }
              }
            },
            "sessions" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                }
              }
            },
            "security" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                },
                "type" : {
                  "type" : "string",
                  "default" : "jwt",
                  "description" : "Default: jwt"
                },
                "constraints" : {
                  "type" : "array"
                },
                "mappings" : {
                  "type" : "array"
                },
                "certificate" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "enabled" : {
                      "type" : [ "boolean", "string" ],
                      "default" : "{{ jetty.server.security.enabled }}",
                      "description" : "Default: {{ jetty.server.security.enabled }} (true)"
                    }
                  }
                },
                "jwt" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "enabled" : {
                      "type" : [ "boolean", "string" ],
                      "default" : "{{ jetty.server.security.enabled }}",
                      "description" : "Default: {{ jetty.server.security.enabled }} (true)"
                    },
                    "cookie" : {
                      "type" : "string",
                      "default" : "token",
                      "description" : "Default: token"
                    },
                    "issuers" : {
                      "type" : "object",
                      "additionalProperties" : true,
                      "properties" : {
                        "default" : {
                          "type" : "object",
                          "additionalProperties" : false,
                          "properties" : {
                            "keys" : {
                              "type" : "array"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "websockets" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                },
                "autoFragment" : {
                  "type" : [ "boolean", "string" ],
                  "default" : true,
                  "description" : "Default: true"
                },
                "idleTimeout" : {
                  "type" : "string",
                  "default" : "{{ defaults.idleTimeout }}",
                  "description" : "Default: {{ defaults.idleTimeout }} (-1s)"
                },
                "inputBufferSize" : {
                  "type" : [ "number", "string" ],
                  "default" : 4096,
                  "description" : "Default: 4096"
                },
                "outputBufferSize" : {
                  "type" : [ "number", "string" ],
                  "default" : 4096,
                  "description" : "Default: 4096"
                },
                "maxFrameSize" : {
                  "type" : [ "number", "string" ],
                  "default" : 65536,
                  "description" : "Default: 65536"
                },
                "maxTextMessageSize" : {
                  "type" : [ "number", "string" ],
                  "default" : 1048576,
                  "description" : "Default: 1048576"
                },
                "maxBinaryMessageSize" : {
                  "type" : [ "number", "string" ],
                  "default" : 1048576,
                  "description" : "Default: 1048576"
                }
              }
            },
            "servlet" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                }
              }
            },
            "gzip" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ jetty.server.enabled }}",
                  "description" : "Default: {{ jetty.server.enabled }} (true)"
                }
              }
            }
          }
        }
      }
    }
  }
}