{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "title" : "xorcery-jetty-client configuration JSON Schema",
  "properties" : {
    "jetty" : {
      "$ref" : "#/$defs/jetty"
    }
  },
  "$defs" : {
    "jetty" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "clients" : {
          "type" : [ "array", "string" ],
          "items" : {
            "anyOf" : [ {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "name" : {
                  "type" : "string",
                  "default" : "default",
                  "description" : "Default: default"
                },
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : true,
                  "description" : "Default: true"
                },
                "idleTimeout" : {
                  "type" : "string",
                  "default" : "-1s",
                  "description" : "Default: -1s"
                },
                "connectTimeout" : {
                  "type" : "string",
                  "default" : "5s",
                  "description" : "Default: 5s"
                },
                "requestBufferSize" : {
                  "type" : [ "number", "string" ],
                  "default" : 4096,
                  "description" : "Default: 4096"
                },
                "reusePort" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                },
                "http2" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "enabled" : {
                      "type" : [ "boolean", "string" ],
                      "default" : false,
                      "description" : "Default: false"
                    },
                    "idleTimeout" : {
                      "type" : "string",
                      "default" : "-1s",
                      "description" : "Default: -1s"
                    }
                  }
                },
                "ssl" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "enabled" : {
                      "type" : [ "boolean", "string" ],
                      "default" : true,
                      "description" : "Default: true"
                    },
                    "alias" : {
                      "type" : "string",
                      "default" : "self",
                      "description" : "Default: self"
                    },
                    "keystore" : {
                      "default" : null,
                      "description" : "Default: null"
                    },
                    "truststore" : {
                      "default" : null,
                      "description" : "Default: null"
                    },
                    "endpointIdentificationAlgorithm" : {
                      "type" : "string",
                      "default" : "HTTPS",
                      "description" : "Default: HTTPS"
                    },
                    "trustAll" : {
                      "type" : [ "boolean", "string" ],
                      "default" : false,
                      "description" : "Default: false"
                    }
                  }
                }
              }
            } ]
          }
        }
      }
    }
  },
  "$id" : "http://xorcery.dev/modules/dev.xorcery/xorcery-jetty-client/schema"
}