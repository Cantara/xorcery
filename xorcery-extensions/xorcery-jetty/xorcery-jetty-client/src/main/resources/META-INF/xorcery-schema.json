{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-jetty-client/schema",
  "title" : "xorcery-jetty-client configuration JSON Schema",
  "properties" : {
    "jetty" : {
      "$ref" : "#/$defs/jetty"
    }
  },
  "$defs" : {
    "jetty" : {
      "type" : "object",
      "properties" : {
        "client" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
            },
            "idleTimeout" : {
              "type" : "string",
              "default" : "{{ defaults.idleTimeout }}",
              "description" : "Default: {{ defaults.idleTimeout }} ({{ defaults.idleTimeout }})"
            },
            "connectTimeout" : {
              "type" : "string",
              "default" : "5s",
              "description" : "Default: 5s"
            },
            "requestBufferSize" : {
              "type" : [ "number", "string" ],
              "default" : 4096,
              "description" : "Default: 4096"
            },
            "reusePort" : {
              "type" : [ "boolean", "string" ],
              "default" : false,
              "description" : "Default: false"
            },
            "http2" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                },
                "idleTimeout" : {
                  "type" : "string",
                  "default" : "{{ jetty.client.idleTimeout }}",
                  "description" : "Default: {{ jetty.client.idleTimeout }} ({{ jetty.client.idleTimeout }})"
                }
              }
            },
            "ssl" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : "string",
                  "default" : "{{ jetty.client.enabled }}",
                  "description" : "Default: {{ jetty.client.enabled }} ({{ jetty.client.enabled }})"
                },
                "alias" : {
                  "type" : "string",
                  "default" : "self",
                  "description" : "Default: self"
                },
                "endpointIdentificationAlgorithm" : {
                  "type" : "string",
                  "default" : "HTTPS",
                  "description" : "Default: HTTPS"
                },
                "trustAll" : {
                  "type" : [ "boolean", "string" ],
                  "default" : false,
                  "description" : "Default: false"
                }
              }
            }
          }
        }
      }
    }
  }
}