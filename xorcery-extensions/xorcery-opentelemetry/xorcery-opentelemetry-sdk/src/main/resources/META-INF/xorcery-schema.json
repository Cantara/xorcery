{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-opentelemetry-sdk/schema",
  "title" : "xorcery-opentelemetry-sdk configuration JSON Schema",
  "properties" : {
    "opentelemetry" : {
      "$ref" : "#/$defs/opentelemetry"
    },
    "system" : {
      "$ref" : "#/$defs/system"
    }
  },
  "$defs" : {
    "opentelemetry" : {
      "type" : "object",
      "properties" : {
        "enabled" : {
          "type" : "string",
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
        },
        "install" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "resource" : {
          "type" : "object",
          "properties" : {
            "service.namespace" : {
              "type" : "string",
              "default" : "{{ instance.environment }}",
              "description" : "Default: {{ instance.environment }} ({{ instance.environment }})"
            },
            "service.name" : {
              "type" : "string",
              "default" : "{{ application.name }}",
              "description" : "Default: {{ application.name }} ({{ application.name }})"
            },
            "service.version" : {
              "type" : "string",
              "default" : "{{ application.version }}",
              "description" : "Default: {{ application.version }} ({{ application.version }})"
            },
            "service.instance.id" : {
              "type" : "string",
              "default" : "{{ instance.id }}",
              "description" : "Default: {{ instance.id }} ({{ instance.id }})"
            },
            "host.name" : {
              "type" : "string",
              "default" : "{{ instance.fqdn }}",
              "description" : "Default: {{ instance.fqdn }} ({{ instance.fqdn }})"
            },
            "host.ip" : {
              "type" : "string",
              "default" : "{{ CALCULATED.ipv4Addresses }}",
              "description" : "Default: {{ CALCULATED.ipv4Addresses }} ({{ CALCULATED.ipv4Addresses }})"
            },
            "process.runtime.name" : {
              "type" : "string",
              "default" : "{{ SYSTEM.java_runtime_name }}",
              "description" : "Default: {{ SYSTEM.java_runtime_name }} ({{ SYSTEM.java_runtime_name }})"
            },
            "process.runtime.version" : {
              "type" : "string",
              "default" : "{{ SYSTEM.java_runtime_version }}",
              "description" : "Default: {{ SYSTEM.java_runtime_version }} ({{ SYSTEM.java_runtime_version }})"
            },
            "process.runtime.description" : {
              "type" : "string",
              "default" : "{{ SYSTEM.java_vm_vendor }} {{ SYSTEM.java_vm_name }} {{ SYSTEM.java_vm_version }}",
              "description" : "Default: {{ SYSTEM.java_vm_vendor }} {{ SYSTEM.java_vm_name }} {{ SYSTEM.java_vm_version }} ({{ SYSTEM.java_vm_vendor }} {{ SYSTEM.java_vm_name }} {{ SYSTEM.java_vm_version }})"
            }
          }
        },
        "exporters" : {
          "type" : "object",
          "properties" : {
            "logging" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : "string",
                  "default" : "{{ opentelemetry.exporters.otlp.endpoint ? false | true }}",
                  "description" : "Default: {{ opentelemetry.exporters.otlp.endpoint ? false | true }} ({{ opentelemetry.exporters.otlp.endpoint ? false | true }})"
                },
                "interval" : {
                  "type" : "string",
                  "default" : "10s",
                  "description" : "Default: 10s"
                }
              }
            },
            "jmx" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : "string",
                  "default" : "{{ opentelemetry.exporters.otlp.endpoint ? false | defaults.development }}",
                  "description" : "Default: {{ opentelemetry.exporters.otlp.endpoint ? false | defaults.development }} ({{ opentelemetry.exporters.otlp.endpoint ? false | defaults.development }})"
                },
                "interval" : {
                  "type" : "string",
                  "default" : "5s",
                  "description" : "Default: 5s"
                }
              }
            },
            "otlp" : {
              "type" : "object",
              "properties" : {
                "http" : {
                  "type" : "object",
                  "properties" : {
                    "enabled" : {
                      "type" : "string",
                      "default" : "{{ opentelemetry.exporters.otlp.endpoint ? true | false }}",
                      "description" : "Default: {{ opentelemetry.exporters.otlp.endpoint ? true | false }} ({{ opentelemetry.exporters.otlp.endpoint ? true | false }})"
                    },
                    "port" : {
                      "type" : [ "number", "string" ],
                      "default" : 4318,
                      "description" : "Default: 4318"
                    },
                    "compression" : {
                      "type" : "string",
                      "default" : "gzip",
                      "description" : "Default: gzip"
                    },
                    "headers" : {
                      "type" : "object",
                      "properties" : { }
                    },
                    "connectTimeout" : {
                      "type" : "string",
                      "default" : "{{ defaults.connectTimeout }}",
                      "description" : "Default: {{ defaults.connectTimeout }} ({{ defaults.connectTimeout }})"
                    },
                    "timeout" : {
                      "type" : "string",
                      "default" : "10s",
                      "description" : "Default: 10s"
                    },
                    "interval" : {
                      "type" : "string",
                      "default" : "10s",
                      "description" : "Default: 10s"
                    },
                    "aggregationTemporality" : {
                      "type" : "string",
                      "default" : "alwaysCumulative",
                      "description" : "Default: alwaysCumulative"
                    },
                    "scheduleDelay" : {
                      "type" : "string",
                      "default" : "5s",
                      "description" : "Default: 5s"
                    },
                    "exporterTimeout" : {
                      "type" : "string",
                      "default" : "60s",
                      "description" : "Default: 60s"
                    },
                    "maxExportBatchSize" : {
                      "type" : [ "number", "string" ],
                      "default" : 1000,
                      "description" : "Default: 1000"
                    },
                    "maxQueueSize" : {
                      "type" : [ "number", "string" ],
                      "default" : 10000,
                      "description" : "Default: 10000"
                    },
                    "logsEndpoint" : {
                      "type" : "string",
                      "default" : "{{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/logs",
                      "description" : "Default: {{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/logs ({{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/logs)"
                    },
                    "tracesEndpoint" : {
                      "type" : "string",
                      "default" : "{{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/traces",
                      "description" : "Default: {{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/traces ({{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/traces)"
                    },
                    "metricsEndpoint" : {
                      "type" : "string",
                      "default" : "{{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/metrics",
                      "description" : "Default: {{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/metrics ({{ opentelemetry.exporters.otlp.endpoint }}:{{ opentelemetry.exporters.otlp.http.port }}/v1/metrics)"
                    }
                  }
                }
              }
            }
          }
        },
        "sampler" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{ opentelemetry.enabled }}",
              "description" : "Default: {{ opentelemetry.enabled }} ({{ opentelemetry.enabled }})"
            }
          }
        },
        "meters" : {
          "type" : "object",
          "properties" : { }
        },
        "instrumentations" : {
          "type" : "object",
          "properties" : { }
        }
      }
    },
    "system" : {
      "type" : "object",
      "properties" : {
        "io.opentelemetry.exporter.internal.http.HttpSenderProvider" : {
          "type" : "string",
          "default" : "com.exoreaction.xorcery.opentelemetry.sdk.exporters.otlphttp.jdk.JdkHttpSenderProvider",
          "description" : "Default: com.exoreaction.xorcery.opentelemetry.sdk.exporters.otlphttp.jdk.JdkHttpSenderProvider"
        }
      }
    }
  }
}