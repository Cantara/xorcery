{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/dev.xorcery/xorcery-opentelemetry-system/schema",
  "title" : "xorcery-opentelemetry-system configuration JSON Schema",
  "properties" : {
    "opentelemetry" : {
      "$ref" : "#/$defs/opentelemetry"
    }
  },
  "$defs" : {
    "opentelemetry" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "instrumentations" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "system" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ defaults.enabled }}",
                  "description" : "Default: {{ defaults.enabled }} (true)"
                },
                "attributes" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "system.filesystem.usage" : {
                      "type" : "string",
                      "default" : "system.filesystem.usage",
                      "description" : "Default: system.filesystem.usage"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}