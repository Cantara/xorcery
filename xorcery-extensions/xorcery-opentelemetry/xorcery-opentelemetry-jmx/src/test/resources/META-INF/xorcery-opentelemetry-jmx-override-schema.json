{
  "$id" : "http://xorcery.dev/applications/dev.xorcery/xorcery-opentelemetry-jmx/override-schema",
  "title" : "xorcery-opentelemetry-jmx configuration override JSON Schema",
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "properties" : {
    "instance" : {
      "$ref" : "#/$defs/instance"
    },
    "application" : {
      "$ref" : "#/$defs/application"
    },
    "system" : {
      "$ref" : "#/$defs/system"
    },
    "defaults" : {
      "$ref" : "#/$defs/defaults"
    },
    "hk2" : {
      "$ref" : "#/$defs/hk2"
    },
    "DefaultRunLevelContext" : {
      "$ref" : "#/$defs/DefaultRunLevelContext"
    },
    "opentelemetry" : {
      "$ref" : "#/$defs/opentelemetry"
    }
  },
  "$defs" : {
    "instance" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string",
          "default" : "{{ instance.host}}.{{ application.name}}",
          "description" : "Default: {{ instance.host}}.{{ application.name}} (service.application)"
        },
        "host" : {
          "type" : "string",
          "default" : "{{ CALCULATED.hostName }}",
          "description" : "Default: {{ CALCULATED.hostName }} (service)"
        },
        "fqdn" : {
          "type" : "string",
          "default" : "{{ instance.host }}.{{ instance.domain }}",
          "description" : "Default: {{ instance.host }}.{{ instance.domain }} (service.xorcery.test)"
        },
        "ip" : {
          "type" : "string",
          "default" : "{{ CALCULATED.ip | null }}",
          "description" : "Default: {{ CALCULATED.ip | null }} (192.168.0.2)"
        },
        "domain" : {
          "type" : "string",
          "default" : "xorcery.test",
          "description" : "Default: xorcery.test"
        },
        "environment" : {
          "type" : "string",
          "default" : "development",
          "description" : "Default: development"
        },
        "tags" : {
          "type" : [ "array", "string" ]
        },
        "home" : {
          "type" : "string",
          "default" : "{{ SYSTEM.user_dir }}",
          "description" : "Default: {{ SYSTEM.user_dir }} ({{ SYSTEM.user_dir }})"
        },
        "resources" : {
          "type" : "string",
          "default" : "{{ instance.home }}",
          "description" : "Default: {{ instance.home }} ({{ instance.home }})"
        },
        "uri" : {
          "type" : "string",
          "default" : "http://{{ instance.fqdn }}/",
          "description" : "Default: http://{{ instance.fqdn }}/ (http://service.xorcery.test/)"
        },
        "api" : {
          "type" : "string",
          "default" : "{{ instance.uri }}api/",
          "description" : "Default: {{ instance.uri }}api/ (http://service.xorcery.test/api/)"
        },
        "locale" : {
          "default" : null,
          "description" : "Default: null"
        }
      }
    },
    "application" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "default" : "application",
          "description" : "Default: application"
        },
        "version" : {
          "type" : "string",
          "default" : "unknown",
          "description" : "Default: unknown"
        }
      }
    },
    "system" : {
      "type" : "object",
      "additionalProperties" : true,
      "properties" : { }
    },
    "defaults" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "connectTimeout" : {
          "type" : "string",
          "default" : "5s",
          "description" : "Default: 5s"
        },
        "idleTimeout" : {
          "type" : "string",
          "default" : "-1s",
          "description" : "Default: -1s"
        },
        "development" : {
          "type" : [ "boolean", "string" ],
          "default" : false,
          "description" : "Default: false"
        }
      }
    },
    "hk2" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "threadPolicy" : {
          "type" : "string",
          "default" : "FULLY_THREADED",
          "description" : "Default: FULLY_THREADED"
        },
        "threadCount" : {
          "type" : [ "number", "string" ],
          "default" : 1,
          "description" : "Default: 1"
        },
        "runLevel" : {
          "type" : [ "number", "string" ],
          "default" : 20,
          "description" : "Default: 20"
        },
        "immediateScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "state" : {
              "type" : "string",
              "default" : "RUNNING",
              "description" : "Default: RUNNING"
            }
          }
        },
        "threadScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            }
          }
        },
        "names" : {
          "type" : [ "array", "string" ]
        }
      }
    },
    "DefaultRunLevelContext" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    },
    "opentelemetry" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "global" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ opentelemetry.enabled ? false | true }}",
              "description" : "Default: {{ opentelemetry.enabled ? false | true }} (true)"
            }
          }
        },
        "instrumentations" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "jmx" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "attributes" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "classloading.loadedClasses" : {
                      "type" : "object",
                      "additionalProperties" : false,
                      "properties" : {
                        "description" : {
                          "type" : "string",
                          "default" : "Nr of loaded classes",
                          "description" : "Default: Nr of loaded classes"
                        },
                        "objectName" : {
                          "type" : "string",
                          "default" : "java.lang:type=ClassLoading",
                          "description" : "Default: java.lang:type=ClassLoading"
                        },
                        "attribute" : {
                          "type" : "string",
                          "default" : "LoadedClassCount",
                          "description" : "Default: LoadedClassCount"
                        },
                        "unit" : {
                          "type" : "string",
                          "default" : "{count}",
                          "description" : "Default: {count}"
                        },
                        "type" : {
                          "type" : "string",
                          "default" : "Gauge",
                          "description" : "Default: Gauge"
                        }
                      }
                    },
                    "system.memory.limit" : {
                      "type" : "object",
                      "additionalProperties" : false,
                      "properties" : {
                        "description" : {
                          "type" : "string",
                          "default" : "Total memory size",
                          "description" : "Default: Total memory size"
                        },
                        "objectName" : {
                          "type" : "string",
                          "default" : "java.lang:type=OperatingSystem",
                          "description" : "Default: java.lang:type=OperatingSystem"
                        },
                        "attribute" : {
                          "type" : "string",
                          "default" : "TotalMemorySize",
                          "description" : "Default: TotalMemorySize"
                        },
                        "unit" : {
                          "type" : "string",
                          "default" : "By",
                          "description" : "Default: By"
                        },
                        "type" : {
                          "type" : "string",
                          "default" : "Gauge",
                          "description" : "Default: Gauge"
                        }
                      }
                    },
                    "system.cpu.utilization" : {
                      "type" : "object",
                      "additionalProperties" : false,
                      "properties" : {
                        "description" : {
                          "type" : "string",
                          "default" : "Process CPU utilization",
                          "description" : "Default: Process CPU utilization"
                        },
                        "objectName" : {
                          "type" : "string",
                          "default" : "java.lang:type=OperatingSystem",
                          "description" : "Default: java.lang:type=OperatingSystem"
                        },
                        "attribute" : {
                          "type" : "string",
                          "default" : "ProcessCpuLoad",
                          "description" : "Default: ProcessCpuLoad"
                        },
                        "unit" : {
                          "type" : "string",
                          "default" : "1",
                          "description" : "Default: 1"
                        },
                        "type" : {
                          "type" : "string",
                          "default" : "Gauge",
                          "description" : "Default: Gauge"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}