{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.dev/modules/dev.xorcery/xorcery-opentelemetry-api/schema",
  "title" : "xorcery-opentelemetry-api configuration JSON Schema",
  "properties" : {
    "opentelemetry" : {
      "$ref" : "#/$defs/opentelemetry"
    }
  },
  "$defs" : {
    "opentelemetry" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "global" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ opentelemetry.enabled ? false | true }}",
              "description" : "Default: {{ opentelemetry.enabled ? false | true }} (true)"
            }
          }
        }
      }
    }
  }
}