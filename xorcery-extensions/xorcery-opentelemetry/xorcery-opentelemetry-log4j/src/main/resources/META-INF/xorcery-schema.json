{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-opentelemetry-log4j/schema",
  "title" : "xorcery-opentelemetry-log4j configuration JSON Schema",
  "properties" : {
    "opentelemetry" : {
      "$ref" : "#/$defs/opentelemetry"
    },
    "log4j2" : {
      "$ref" : "#/$defs/log4j2"
    }
  },
  "$defs" : {
    "opentelemetry" : {
      "type" : "object",
      "properties" : {
        "instrumentations" : {
          "type" : "object",
          "properties" : {
            "log4j" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : "string",
                  "default" : "{{ defaults.enabled }}",
                  "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
                }
              }
            }
          }
        }
      }
    },
    "log4j2" : {
      "type" : "object",
      "properties" : {
        "Configuration" : {
          "type" : "object",
          "properties" : {
            "appenders" : {
              "type" : "object",
              "properties" : {
                "OpenTelemetry" : {
                  "type" : "object",
                  "properties" : {
                    "name" : {
                      "type" : "string",
                      "default" : "OpenTelemetryAppender",
                      "description" : "Default: OpenTelemetryAppender"
                    },
                    "type" : {
                      "type" : "string",
                      "default" : "io.opentelemetry.instrumentation.log4j.appender.v2_17.OpenTelemetryAppender",
                      "description" : "Default: io.opentelemetry.instrumentation.log4j.appender.v2_17.OpenTelemetryAppender"
                    },
                    "captureMapMessageAttributes" : {
                      "type" : [ "boolean", "string" ],
                      "default" : true,
                      "description" : "Default: true"
                    },
                    "captureMarkerAttribute" : {
                      "type" : [ "boolean", "string" ],
                      "default" : true,
                      "description" : "Default: true"
                    },
                    "captureContextDataAttributes" : {
                      "type" : [ "boolean", "string" ],
                      "default" : true,
                      "description" : "Default: true"
                    }
                  }
                }
              }
            },
            "Loggers" : {
              "type" : "object",
              "properties" : {
                "Root" : {
                  "type" : "object",
                  "properties" : { }
                }
              }
            }
          }
        }
      }
    }
  }
}