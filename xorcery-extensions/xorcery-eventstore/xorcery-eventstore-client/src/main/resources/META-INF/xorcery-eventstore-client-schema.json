{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-eventstore-client/schema",
  "title" : "xorcery-eventstore-client configuration JSON Schema",
  "properties" : {
    "eventstore" : {
      "$ref" : "#/$defs/eventstore"
    }
  },
  "$defs" : {
    "eventstore" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "uri" : {
          "type" : "string",
          "default" : "esdb://localhost:2113?tls=false",
          "description" : "Default: esdb://localhost:2113?tls=false"
        },
        "client" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} (true)"
            }
          }
        }
      }
    }
  }
}