{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "title" : "xorcery-eventstore-projections configuration JSON Schema",
  "properties" : {
    "eventstore" : {
      "$ref" : "#/$defs/eventstore"
    }
  },
  "$defs" : {
    "eventstore" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "projections" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ eventstore.enabled }}",
              "description" : "Default: {{ eventstore.enabled }} (true)"
            },
            "updatesAllowed" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "projections" : {
              "type" : [ "array", "string" ],
              "items" : {
                "properties" : {
                  "enabled" : {
                    "type" : [ "boolean", "string" ]
                  },
                  "name" : {
                    "type" : "string"
                  },
                  "query" : {
                    "type" : "string"
                  },
                  "emitenabled" : {
                    "type" : [ "boolean", "string" ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "$id" : "http://xorcery.dev/modules/dev.xorcery/xorcery-eventstore-projections/schema"
}