{
  "$id" : "http://xorcery.dev/applications/dev.xorcery/xorcery-eventstore-projections/override-schema",
  "title" : "xorcery-eventstore-projections configuration override JSON Schema",
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "properties" : {
    "instance" : {
      "$ref" : "#/$defs/instance"
    },
    "application" : {
      "$ref" : "#/$defs/application"
    },
    "system" : {
      "$ref" : "#/$defs/system"
    },
    "defaults" : {
      "$ref" : "#/$defs/defaults"
    },
    "hk2" : {
      "$ref" : "#/$defs/hk2"
    },
    "DefaultRunLevelContext" : {
      "$ref" : "#/$defs/DefaultRunLevelContext"
    },
    "eventstore" : {
      "$ref" : "#/$defs/eventstore"
    },
    "opentelemetry" : {
      "$ref" : "#/$defs/opentelemetry"
    }
  },
  "$defs" : {
    "instance" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string",
          "default" : "{{ instance.host}}.{{ application.name}}",
          "description" : "Default: {{ instance.host}}.{{ application.name}} (service.application)"
        },
        "host" : {
          "type" : "string",
          "default" : "{{ CALCULATED.hostName }}",
          "description" : "Default: {{ CALCULATED.hostName }} (service)"
        },
        "fqdn" : {
          "type" : "string",
          "default" : "{{ instance.host }}.{{ instance.domain }}",
          "description" : "Default: {{ instance.host }}.{{ instance.domain }} (service.xorcery.test)"
        },
        "ip" : {
          "type" : "string",
          "default" : "{{ CALCULATED.ip | null }}",
          "description" : "Default: {{ CALCULATED.ip | null }} (192.168.0.2)"
        },
        "domain" : {
          "type" : "string",
          "default" : "xorcery.test",
          "description" : "Default: xorcery.test"
        },
        "environment" : {
          "type" : "string",
          "default" : "development",
          "description" : "Default: development"
        },
        "tags" : {
          "type" : [ "array", "string" ]
        },
        "home" : {
          "type" : "string",
          "default" : "{{ SYSTEM.user_dir }}",
          "description" : "Default: {{ SYSTEM.user_dir }} ({{ SYSTEM.user_dir }})"
        },
        "resources" : {
          "type" : "string",
          "default" : "{{ instance.home }}",
          "description" : "Default: {{ instance.home }} ({{ instance.home }})"
        },
        "uri" : {
          "type" : "string",
          "default" : "http://{{ instance.fqdn }}/",
          "description" : "Default: http://{{ instance.fqdn }}/ (http://service.xorcery.test/)"
        },
        "api" : {
          "type" : "string",
          "default" : "{{ instance.uri }}api/",
          "description" : "Default: {{ instance.uri }}api/ (http://service.xorcery.test/api/)"
        },
        "locale" : {
          "default" : null,
          "description" : "Default: null"
        },
        "timeZone" : {
          "default" : null,
          "description" : "Default: null"
        }
      }
    },
    "application" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "default" : "application",
          "description" : "Default: application"
        },
        "version" : {
          "type" : "string",
          "default" : "unknown",
          "description" : "Default: unknown"
        }
      }
    },
    "system" : {
      "type" : "object",
      "additionalProperties" : true,
      "properties" : { }
    },
    "defaults" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "connectTimeout" : {
          "type" : "string",
          "default" : "5s",
          "description" : "Default: 5s"
        },
        "idleTimeout" : {
          "type" : "string",
          "default" : "-1s",
          "description" : "Default: -1s"
        },
        "development" : {
          "type" : [ "boolean", "string" ],
          "default" : false,
          "description" : "Default: false"
        }
      }
    },
    "hk2" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "threadPolicy" : {
          "type" : "string",
          "default" : "FULLY_THREADED",
          "description" : "Default: FULLY_THREADED"
        },
        "threadCount" : {
          "type" : [ "number", "string" ],
          "default" : 1,
          "description" : "Default: 1"
        },
        "runLevel" : {
          "type" : [ "number", "string" ],
          "default" : 20,
          "description" : "Default: 20"
        },
        "immediateScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "state" : {
              "type" : "string",
              "default" : "RUNNING",
              "description" : "Default: RUNNING"
            }
          }
        },
        "threadScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            }
          }
        },
        "names" : {
          "type" : [ "array", "string" ]
        }
      }
    },
    "DefaultRunLevelContext" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    },
    "eventstore" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "uri" : {
          "type" : "string",
          "default" : "esdb://localhost:2113?tls=false",
          "description" : "Default: esdb://localhost:2113?tls=false"
        },
        "client" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} (true)"
            }
          }
        },
        "projections" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ eventstore.enabled }}",
              "description" : "Default: {{ eventstore.enabled }} (true)"
            },
            "projections" : {
              "type" : [ "array", "string" ],
              "items" : {
                "properties" : {
                  "enabled" : {
                    "type" : [ "boolean", "string" ]
                  },
                  "name" : {
                    "type" : "string"
                  },
                  "query" : {
                    "type" : "string"
                  },
                  "emitenabled" : {
                    "type" : [ "boolean", "string" ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "opentelemetry" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "global" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ opentelemetry.enabled ? false | true }}",
              "description" : "Default: {{ opentelemetry.enabled ? false | true }} (true)"
            }
          }
        }
      }
    }
  }
}