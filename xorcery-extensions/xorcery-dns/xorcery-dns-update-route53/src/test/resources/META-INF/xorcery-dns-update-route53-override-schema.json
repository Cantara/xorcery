{
  "$id" : "http://xorcery.dev/applications/dev.xorcery/xorcery-dns-update-route53/override-schema",
  "title" : "xorcery-dns-update-route53 configuration override JSON Schema",
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "properties" : {
    "aws" : {
      "$ref" : "#/$defs/aws"
    },
    "instance" : {
      "$ref" : "#/$defs/instance"
    },
    "application" : {
      "$ref" : "#/$defs/application"
    },
    "system" : {
      "$ref" : "#/$defs/system"
    },
    "defaults" : {
      "$ref" : "#/$defs/defaults"
    },
    "hk2" : {
      "$ref" : "#/$defs/hk2"
    },
    "DefaultRunLevelContext" : {
      "$ref" : "#/$defs/DefaultRunLevelContext"
    },
    "dns" : {
      "$ref" : "#/$defs/dns"
    },
    "secrets" : {
      "$ref" : "#/$defs/secrets"
    }
  },
  "$defs" : {
    "aws" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "region" : {
          "type" : "string",
          "default" : "{{ ENV:aws.region }}",
          "description" : "Default: {{ ENV:aws.region }} ({{ ENV:aws.region }})"
        },
        "auth" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ aws.enabled }}",
              "description" : "Default: {{ aws.enabled }} (true)"
            },
            "type" : {
              "type" : "string",
              "default" : "accessKey",
              "description" : "Default: accessKey"
            },
            "accessKeyId" : {
              "type" : "string",
              "default" : "env:aws.accessKeyId",
              "description" : "Default: env:aws.accessKeyId"
            },
            "secretAccessKey" : {
              "type" : "string",
              "default" : "env:aws.secretAccessKey",
              "description" : "Default: env:aws.secretAccessKey"
            },
            "sessionToken" : {
              "type" : "string",
              "default" : "env:aws.sessionToken",
              "description" : "Default: env:aws.sessionToken"
            }
          }
        }
      }
    },
    "instance" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string",
          "default" : "{{ instance.host}}.{{ application.name}}",
          "description" : "Default: {{ instance.host}}.{{ application.name}} (service.application)"
        },
        "host" : {
          "type" : "string",
          "default" : "{{ CALCULATED.hostName }}",
          "description" : "Default: {{ CALCULATED.hostName }} (service)"
        },
        "fqdn" : {
          "type" : "string",
          "default" : "{{ instance.host }}.{{ instance.domain }}",
          "description" : "Default: {{ instance.host }}.{{ instance.domain }} (service.xorcery.test)"
        },
        "ip" : {
          "type" : "string",
          "default" : "{{ CALCULATED.ip | null }}",
          "description" : "Default: {{ CALCULATED.ip | null }} (192.168.0.2)"
        },
        "domain" : {
          "type" : "string",
          "default" : "xorcery.test",
          "description" : "Default: xorcery.test"
        },
        "environment" : {
          "type" : "string",
          "default" : "development",
          "description" : "Default: development"
        },
        "tags" : {
          "type" : [ "array", "string" ]
        },
        "home" : {
          "type" : "string",
          "default" : "{{ SYSTEM.user_dir }}",
          "description" : "Default: {{ SYSTEM.user_dir }} ({{ SYSTEM.user_dir }})"
        },
        "resources" : {
          "type" : "string",
          "default" : "{{ instance.home }}",
          "description" : "Default: {{ instance.home }} ({{ instance.home }})"
        },
        "uri" : {
          "type" : "string",
          "default" : "http://{{ instance.fqdn }}/",
          "description" : "Default: http://{{ instance.fqdn }}/ (http://service.xorcery.test/)"
        },
        "api" : {
          "type" : "string",
          "default" : "{{ instance.uri }}api/",
          "description" : "Default: {{ instance.uri }}api/ (http://service.xorcery.test/api/)"
        },
        "locale" : {
          "default" : null,
          "description" : "Default: null"
        }
      }
    },
    "application" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "default" : "application",
          "description" : "Default: application"
        },
        "version" : {
          "type" : "string",
          "default" : "unknown",
          "description" : "Default: unknown"
        }
      }
    },
    "system" : {
      "type" : "object",
      "additionalProperties" : true,
      "properties" : { }
    },
    "defaults" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "connectTimeout" : {
          "type" : "string",
          "default" : "5s",
          "description" : "Default: 5s"
        },
        "idleTimeout" : {
          "type" : "string",
          "default" : "-1s",
          "description" : "Default: -1s"
        },
        "development" : {
          "type" : [ "boolean", "string" ],
          "default" : false,
          "description" : "Default: false"
        }
      }
    },
    "hk2" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "threadPolicy" : {
          "type" : "string",
          "default" : "FULLY_THREADED",
          "description" : "Default: FULLY_THREADED"
        },
        "threadCount" : {
          "type" : [ "number", "string" ],
          "default" : 1,
          "description" : "Default: 1"
        },
        "runLevel" : {
          "type" : [ "number", "string" ],
          "default" : 20,
          "description" : "Default: 20"
        },
        "immediateScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "state" : {
              "type" : "string",
              "default" : "RUNNING",
              "description" : "Default: RUNNING"
            }
          }
        },
        "threadScope" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            }
          }
        },
        "names" : {
          "type" : [ "array", "string" ]
        }
      }
    },
    "DefaultRunLevelContext" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    },
    "dns" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "client" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} (true)"
            },
            "nameServers" : {
              "type" : [ "array", "string" ]
            },
            "search" : {
              "type" : [ "array", "string" ]
            },
            "hosts" : {
              "type" : [ "array", "string" ],
              "additionalProperties" : true,
              "items" : {
                "type" : "object",
                "properties" : {
                  "name" : {
                    "description" : "Host name",
                    "type" : "string"
                  },
                  "url" : {
                    "description" : "IP or URL",
                    "type" : [ "array", "string" ],
                    "items" : {
                      "type" : "string"
                    }
                  }
                }
              }
            },
            "timeout" : {
              "type" : "string",
              "default" : "10s",
              "description" : "Default: 10s"
            },
            "forceTcp" : {
              "type" : [ "boolean", "string" ],
              "default" : false,
              "description" : "Default: false"
            }
          }
        },
        "dyndns" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ dns.client.enabled }}",
              "description" : "Default: {{ dns.client.enabled }} (true)"
            },
            "timeout" : {
              "type" : "string",
              "default" : "30s",
              "description" : "Default: 30s"
            },
            "ttl" : {
              "type" : "string",
              "default" : "60s",
              "description" : "Default: 60s"
            }
          }
        },
        "route53" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "region" : {
              "type" : "string",
              "default" : "aws-global",
              "description" : "Default: aws-global"
            }
          }
        }
      }
    },
    "secrets" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{defaults.enabled}}",
          "description" : "Default: {{defaults.enabled}} (true)"
        },
        "default" : {
          "type" : "string",
          "default" : "secret",
          "description" : "Default: secret"
        },
        "env" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ secrets.enabled }}",
              "description" : "Default: {{ secrets.enabled }} ({{ secrets.enabled }})"
            }
          }
        },
        "system" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ secrets.enabled }}",
              "description" : "Default: {{ secrets.enabled }} ({{ secrets.enabled }})"
            }
          }
        }
      }
    }
  }
}