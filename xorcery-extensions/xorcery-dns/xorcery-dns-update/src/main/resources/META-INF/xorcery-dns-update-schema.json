{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-dns-update/schema",
  "title" : "xorcery-dns-update configuration JSON Schema",
  "properties" : {
    "dns" : {
      "$ref" : "#/$defs/dns"
    }
  },
  "$defs" : {
    "dns" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "dyndns" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ dns.client.enabled }}",
              "description" : "Default: {{ dns.client.enabled }} (true)"
            },
            "timeout" : {
              "type" : "string",
              "default" : "30s",
              "description" : "Default: 30s"
            },
            "ttl" : {
              "type" : "string",
              "default" : "60s",
              "description" : "Default: 60s"
            }
          }
        }
      }
    }
  }
}