{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-dns-server/schema",
  "title" : "xorcery-dns-server configuration JSON Schema",
  "properties" : {
    "dns" : {
      "$ref" : "#/$defs/dns"
    }
  },
  "$defs" : {
    "dns" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "server" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} (true)"
            },
            "port" : {
              "type" : [ "number", "string" ],
              "default" : 53,
              "description" : "Default: 53"
            },
            "zones" : {
              "type" : "array"
            },
            "keys" : {
              "type" : "array"
            },
            "tcp" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ dns.server.enabled }}",
                  "description" : "Default: {{ dns.server.enabled }} (true)"
                },
                "idleTimeout" : {
                  "type" : "string",
                  "default" : "{{ defaults.idleTimeout }}",
                  "description" : "Default: {{ defaults.idleTimeout }} (-1s)"
                }
              }
            },
            "udp" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "enabled" : {
                  "type" : [ "boolean", "string" ],
                  "default" : "{{ dns.server.enabled }}",
                  "description" : "Default: {{ dns.server.enabled }} (true)"
                }
              }
            }
          }
        }
      }
    }
  }
}