{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-dns-multicast/schema",
  "title" : "xorcery-dns-multicast configuration JSON Schema",
  "properties" : {
    "dns" : {
      "$ref" : "#/$defs/dns"
    }
  },
  "$defs" : {
    "dns" : {
      "type" : "object",
      "properties" : {
        "multicast" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
            },
            "discovery" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : "string",
                  "default" : "{{ dns.multicast.enabled }}",
                  "description" : "Default: {{ dns.multicast.enabled }} ({{ dns.multicast.enabled }})"
                }
              }
            },
            "announce" : {
              "type" : "object",
              "properties" : {
                "enabled" : {
                  "type" : "string",
                  "default" : "{{ dns.multicast.enabled }}",
                  "description" : "Default: {{ dns.multicast.enabled }} ({{ dns.multicast.enabled }})"
                }
              }
            }
          }
        }
      }
    }
  }
}