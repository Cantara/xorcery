{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-keystores/schema",
  "title" : "xorcery-keystores configuration JSON Schema",
  "properties" : {
    "keystores" : {
      "$ref" : "#/$defs/keystores"
    },
    "secrets" : {
      "$ref" : "#/$defs/secrets"
    }
  },
  "$defs" : {
    "keystores" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "defaultPassword" : {
          "type" : "string",
          "default" : "secret:password",
          "description" : "Default: secret:password"
        },
        "stores" : {
          "type" : [ "array", "string" ],
          "items" : {
            "properties" : {
              "name" : {
                "type" : "string"
              },
              "path" : {
                "type" : "string"
              },
              "password" : {
                "type" : "string"
              },
              "addRootCa" : {
                "type" : [ "boolean", "string" ],
                "default" : false
              },
              "template" : {
                "type" : [ "string", "null" ]
              }
            }
          }
        }
      }
    },
    "secrets" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "keystore" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : "{{secrets.enabled}}",
              "description" : "Default: {{secrets.enabled}} (true)"
            },
            "name" : {
              "type" : "string",
              "default" : "secrets",
              "description" : "Default: secrets"
            }
          }
        }
      }
    }
  }
}