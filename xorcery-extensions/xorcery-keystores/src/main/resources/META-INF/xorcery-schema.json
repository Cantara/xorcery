{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-keystores/schema",
  "title" : "xorcery-keystores configuration JSON Schema",
  "properties" : {
    "keystores" : {
      "$ref" : "#/$defs/keystores"
    }
  },
  "$defs" : {
    "keystores" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "defaultPassword" : {
          "type" : "string",
          "default" : "secret:password",
          "description" : "Default: secret:password"
        },
        "stores" : {
          "type" : "array",
          "items" : {
            "properties" : {
              "name" : {
                "type" : "string"
              },
              "path" : {
                "type" : "string"
              },
              "password" : {
                "type" : "string"
              },
              "addRootCa" : {
                "type" : [ "boolean", "string" ],
                "default" : false
              },
              "template" : {
                "type" : "string"
              }
            }
          }
        }
      }
    }
  }
}