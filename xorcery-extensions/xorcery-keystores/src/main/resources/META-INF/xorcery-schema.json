{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-keystores/schema",
  "title" : "xorcery-keystores configuration JSON Schema",
  "properties" : {
    "keystores" : {
      "$ref" : "#/$defs/keystores"
    },
    "secrets" : {
      "$ref" : "#/$defs/secrets"
    }
  },
  "$defs" : {
    "keystores" : {
      "type" : "object",
      "properties" : {
        "enabled" : {
          "type" : "string",
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
        },
        "defaultPassword" : {
          "type" : "string",
          "default" : "secret:password",
          "description" : "Default: secret:password"
        },
        "secrets" : {
          "type" : "object",
          "properties" : {
            "template" : {
              "type" : "string",
              "default" : "META-INF/secrets.p12",
              "description" : "Default: META-INF/secrets.p12"
            },
            "path" : {
              "type" : "string",
              "default" : "{{ instance.home }}/secrets.p12",
              "description" : "Default: {{ instance.home }}/secrets.p12 ({{ instance.home }}/secrets.p12)"
            },
            "password" : {
              "type" : "string",
              "default" : "{{ keystores.defaultPassword }}",
              "description" : "Default: {{ keystores.defaultPassword }} ({{ keystores.defaultPassword }})"
            }
          }
        }
      }
    },
    "secrets" : {
      "type" : "object",
      "properties" : {
        "keystore" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{secrets.enabled}}",
              "description" : "Default: {{secrets.enabled}} ({{secrets.enabled}})"
            },
            "name" : {
              "type" : "string",
              "default" : "secrets",
              "description" : "Default: secrets"
            }
          }
        }
      }
    }
  }
}