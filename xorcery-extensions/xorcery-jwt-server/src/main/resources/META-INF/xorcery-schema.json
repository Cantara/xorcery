{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-jwt-server/schema",
  "title" : "xorcery-jwt-server configuration JSON Schema",
  "properties" : {
    "jwt" : {
      "$ref" : "#/$defs/jwt"
    }
  },
  "$defs" : {
    "jwt" : {
      "type" : "object",
      "properties" : {
        "server" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
            },
            "token" : {
              "type" : "object",
              "properties" : {
                "duration" : {
                  "type" : "string",
                  "default" : "P7D",
                  "description" : "Default: P7D"
                },
                "issuer" : {
                  "type" : "string",
                  "default" : "{{ instance.fqdn }}",
                  "description" : "Default: {{ instance.fqdn }} ({{ instance.fqdn }})"
                }
              }
            },
            "cookie" : {
              "type" : "object",
              "properties" : {
                "duration" : {
                  "type" : "string",
                  "default" : "P7D",
                  "description" : "Default: P7D"
                },
                "name" : {
                  "type" : "string",
                  "default" : "token",
                  "description" : "Default: token"
                },
                "path" : {
                  "type" : "string",
                  "default" : "/",
                  "description" : "Default: /"
                },
                "domain" : {
                  "type" : "string",
                  "default" : "{{ instance.domain }}",
                  "description" : "Default: {{ instance.domain }} ({{ instance.domain }})"
                }
              }
            }
          }
        },
        "configuration" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "string",
              "default" : "{{ defaults.enabled }}",
              "description" : "Default: {{ defaults.enabled }} ({{ defaults.enabled }})"
            }
          }
        },
        "users" : {
          "type" : "object",
          "properties" : { }
        }
      }
    }
  }
}