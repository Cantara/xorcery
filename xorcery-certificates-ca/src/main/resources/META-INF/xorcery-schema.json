{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/xorcery-certificates-ca/schema",
  "title" : "xorcery-certificates-ca configuration JSON Schema",
  "properties" : {
    "intermediateca" : {
      "$ref" : "#/$defs/intermediateca"
    },
    "keystores" : {
      "$ref" : "#/$defs/keystores"
    },
    "jersey" : {
      "$ref" : "#/$defs/jersey"
    }
  },
  "$defs" : {
    "intermediateca" : {
      "type" : "object",
      "properties" : {
        "alias" : {
          "type" : "string",
          "default" : "intermediate",
          "description" : "Default: intermediate"
        },
        "validity" : {
          "type" : "string",
          "default" : "90d",
          "description" : "Default: 90d"
        }
      }
    },
    "keystores" : {
      "type" : "object",
      "properties" : {
        "castore" : {
          "type" : "object",
          "properties" : {
            "path" : {
              "type" : "string",
              "default" : "META-INF/intermediatecakeystore.p12",
              "description" : "Default: META-INF/intermediatecakeystore.p12"
            }
          }
        },
        "rootstore" : {
          "type" : "object",
          "properties" : {
            "path" : {
              "type" : "string",
              "default" : "{{ instance.home }}/rootcakeystore.p12",
              "description" : "Default: {{ instance.home }}/rootcakeystore.p12"
            }
          }
        }
      }
    },
    "jersey" : {
      "type" : "object",
      "properties" : {
        "server" : {
          "type" : "object",
          "properties" : { }
        }
      }
    }
  }
}