{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery/com.exoreaction.xorcery:xorcery-core:jar:0.96.1-SNAPSHOT/schema",
  "title" : "xorcery-core configuration JSON Schema",
  "properties" : {
    "instance" : {
      "$ref" : "#/$defs/instance"
    },
    "application" : {
      "$ref" : "#/$defs/application"
    },
    "system" : {
      "$ref" : "#/$defs/system"
    },
    "defaults" : {
      "$ref" : "#/$defs/defaults"
    },
    "hk2" : {
      "$ref" : "#/$defs/hk2"
    },
    "DefaultRunLevelContext" : {
      "$ref" : "#/$defs/DefaultRunLevelContext"
    },
    "log4j2" : {
      "$ref" : "#/$defs/log4j2"
    }
  },
  "$defs" : {
    "instance" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "string",
          "default" : "{{ instance.host}}.{{ application.name}}",
          "description" : "Default: {{ instance.host}}.{{ application.name}}"
        },
        "fqdn" : {
          "type" : "string",
          "default" : "{{ instance.host }}.{{ instance.domain }}",
          "description" : "Default: {{ instance.host }}.{{ instance.domain }}"
        },
        "domain" : {
          "type" : "string",
          "default" : "xorcery.test",
          "description" : "Default: xorcery.test"
        },
        "environment" : {
          "type" : "string",
          "default" : "development",
          "description" : "Default: development",
          "enum" : [ "development", "qa", "production" ]
        },
        "uri" : {
          "type" : "string",
          "default" : "{{ jetty.server.uri | \"http://localhost/\"}}",
          "description" : "Default: {{ jetty.server.uri | \"http://localhost/\"}}"
        },
        "api" : {
          "type" : "string",
          "default" : "{{ instance.uri }}api/",
          "description" : "Default: {{ instance.uri }}api/"
        }
      }
    },
    "application" : {
      "type" : "object",
      "properties" : {
        "name" : {
          "type" : "string",
          "default" : "genericserver",
          "description" : "Default: genericserver"
        },
        "version" : {
          "type" : "string",
          "default" : "unknown",
          "description" : "Default: unknown"
        }
      }
    },
    "system" : {
      "type" : "object",
      "properties" : {
        "java.util.logging.manager" : {
          "type" : "string",
          "default" : "org.apache.logging.log4j.jul.LogManager",
          "description" : "Default: org.apache.logging.log4j.jul.LogManager"
        },
        "log4j2.isThreadContextMapInheritable" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "Log4jContextSelector" : {
          "type" : "string",
          "default" : "org.apache.logging.log4j.core.selector.BasicContextSelector",
          "description" : "Default: org.apache.logging.log4j.core.selector.BasicContextSelector"
        }
      }
    },
    "defaults" : {
      "type" : "object",
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        },
        "connectTimeout" : {
          "type" : "string",
          "default" : "5s",
          "description" : "Default: 5s"
        },
        "idleTimeout" : {
          "type" : "string",
          "default" : "-1s",
          "description" : "Default: -1s"
        },
        "development" : {
          "type" : [ "boolean", "string" ],
          "default" : false,
          "description" : "Default: false"
        }
      }
    },
    "hk2" : {
      "type" : "object",
      "properties" : {
        "threadPolicy" : {
          "type" : "string",
          "default" : "FULLY_THREADED",
          "description" : "Default: FULLY_THREADED"
        },
        "threadCount" : {
          "type" : [ "number", "string" ],
          "default" : 5,
          "description" : "Default: 5"
        },
        "runLevel" : {
          "type" : [ "number", "string" ],
          "default" : 20,
          "description" : "Default: 20"
        },
        "immediateScope" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            },
            "state" : {
              "type" : "string",
              "default" : "RUNNING",
              "description" : "Default: RUNNING"
            }
          }
        },
        "threadScope" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : [ "boolean", "string" ],
              "default" : true,
              "description" : "Default: true"
            }
          }
        }
      }
    },
    "DefaultRunLevelContext" : {
      "type" : "object",
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    },
    "log4j2" : {
      "type" : "object",
      "properties" : {
        "Configuration" : {
          "type" : "object",
          "properties" : {
            "name" : {
              "type" : "string",
              "default" : "Xorcery",
              "description" : "Default: Xorcery"
            },
            "status" : {
              "type" : "string",
              "default" : "warn",
              "description" : "Default: warn"
            },
            "properties" : {
              "type" : "object",
              "properties" : { }
            },
            "thresholdFilter" : {
              "type" : "object",
              "properties" : {
                "level" : {
                  "type" : "string",
                  "default" : "info",
                  "description" : "Default: info"
                }
              }
            },
            "appenders" : {
              "type" : "object",
              "properties" : { }
            },
            "Loggers" : {
              "type" : "object",
              "properties" : {
                "Root" : {
                  "type" : "object",
                  "properties" : {
                    "level" : {
                      "type" : "string",
                      "default" : "info",
                      "description" : "Default: info"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}