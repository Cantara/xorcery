<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.exoreaction.xorcery</groupId>
    <artifactId>xorcery-project</artifactId>
    <version>0.30.1</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <developers>
        <developer>
            <organization>eXOReaction AS</organization>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>Apache License Version 2.0</name>
            <url>LICENSE.txt</url>
        </license>
    </licenses>
    <scm>
        <developerConnection>scm:git:ssh://git@github.com/Cantara/xorcery.git</developerConnection>
        <connection>scm:git:https://github.com/Cantara/xorcery.git</connection>
        <url>https://github.com/Cantara/xorcery</url>
        <tag>xorcery-project-0.30.1</tag>
    </scm>

    <modules>
        <module>xorcery-parent</module>

        <module>xorcery-util</module>
        <module>xorcery-json</module>
        <module>xorcery-configuration-api</module>
        <module>xorcery-disruptor</module>
        <module>xorcery-configuration</module>
        <module>xorcery-metadata</module>
        <module>xorcery-health-api</module>
        <module>xorcery-health-registry</module>

        <module>xorcery-jsonschema</module>
        <module>xorcery-jsonapi</module>
        <module>xorcery-jsonapi-jaxrs</module>
        <module>xorcery-jsonapi-client</module>
        <module>xorcery-service-api</module>
        <module>xorcery-jsonapi-server</module>

        <module>xorcery-core</module>
        <module>xorcery-junit</module>
        <module>xorcery-runner</module>

        <module>xorcery-metricregistry</module>

        <module>xorcery-secrets</module>
        <module>xorcery-keystores</module>

        <module>xorcery-dns-client</module>
        <module>xorcery-jetty-client</module>
        <module>xorcery-certificates</module>

        <module>xorcery-jetty-server</module>
        <module>xorcery-dns-server</module>

        <module>xorcery-dns-update</module>
        <module>xorcery-dns-registration</module>
        <module>xorcery-dns-multicast</module>

        <module>xorcery-jersey-client</module>
        <module>xorcery-jersey-server</module>
        <module>xorcery-reactivestreams-api</module>
        <module>xorcery-reactivestreams-client</module>
        <module>xorcery-metrics</module>
        <module>xorcery-reactivestreams-server</module>

        <module>xorcery-admin-servlet</module>

        <module>xorcery-certificates-server</module>
        <module>xorcery-certificates-ca</module>
        <module>xorcery-certificates-letsencrypt</module>
        <module>xorcery-certificates-client</module>

        <module>xorcery-domainevents</module>
        <module>xorcery-domainevents-publisher</module>
        <module>xorcery-domainevents-jsonapi</module>

        <module>xorcery-jwt-server</module>

        <module>xorcery-eventstore</module>
        <module>xorcery-handlebars</module>

        <module>xorcery-neo4j</module>
        <module>xorcery-neo4j-binarytree</module>
        <module>xorcery-neo4j-projections</module>
        <module>xorcery-domainevents-neo4jprojection</module>
        <module>xorcery-jsonapi-server-neo4j</module>
        <module>xorcery-neo4j-browser</module>

        <module>xorcery-opensearch</module>

        <module>xorcery-log4j</module>
        <module>xorcery-jmxmetrics</module>

        <module>xorcery-coordinator</module>

        <module>xorcery-test</module>
        <module>xorcery-benchmarks</module>

        <module>xorcery-docs</module>
        <module>xorcery-bom</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.shredzone.maven</groupId>
                <artifactId>mkdocs-maven-plugin</artifactId>
                <version>1.1</version>
                <configuration>
                    <outputDirectory>${project.build.directory}/site</outputDirectory>
                    <clean>true</clean>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.5.0</version>
                <configuration>
                    <doclint>syntax,reference</doclint>
                    <linksource>true</linksource>
                    <locale>en</locale>
                    <noqualifier>all</noqualifier>
                    <useStandardDocletOptions>false</useStandardDocletOptions>
                    <reportOutputDirectory>${project.build.directory}/site</reportOutputDirectory>
                    <destDir>apidocs</destDir>
                </configuration>
                <executions>
                    <execution>
                        <id>aggregate</id>
                        <goals>
                            <goal>aggregate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>cantara-releases</id>
            <name>Cantara Release Repository</name>
            <url>https://mvnrepo.cantara.no/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>cantara-snapshots</id>
            <name>Cantara Snapshot Repository</name>
            <url>https://mvnrepo.cantara.no/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>cantara</id>
            <name>Cantara Release Repository</name>
            <url>https://mvnrepo.cantara.no/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>cantara</id>
            <name>Cantara Snapshot Repository</name>
            <url>https://mvnrepo.cantara.no/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

</project>
