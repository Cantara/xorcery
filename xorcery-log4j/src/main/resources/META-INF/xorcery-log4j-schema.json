{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "$id" : "http://xorcery.exoreaction.com/modules/dev.xorcery/xorcery-log4j/schema",
  "title" : "xorcery-log4j configuration JSON Schema",
  "properties" : {
    "log4j2" : {
      "$ref" : "#/$defs/log4j2"
    }
  },
  "$defs" : {
    "log4j2" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "Configuration" : {
          "type" : "object",
          "additionalProperties" : false,
          "properties" : {
            "name" : {
              "type" : "string",
              "default" : "Xorcery",
              "description" : "Default: Xorcery"
            },
            "status" : {
              "type" : "string",
              "default" : "warn",
              "description" : "Default: warn",
              "enum" : [ "trace", "debug", "info", "warn", "error" ]
            },
            "properties" : {
              "type" : "object",
              "additionalProperties" : true,
              "properties" : { }
            },
            "thresholdFilter" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "level" : {
                  "type" : "string",
                  "default" : "info",
                  "description" : "Default: info",
                  "enum" : [ "trace", "debug", "info", "warn", "error" ]
                }
              }
            },
            "appenders" : {
              "type" : "object",
              "additionalProperties" : true,
              "properties" : { }
            },
            "Loggers" : {
              "type" : "object",
              "additionalProperties" : false,
              "properties" : {
                "logger" : {
                  "type" : [ "array", "string" ],
                  "items" : {
                    "properties" : {
                      "name" : {
                        "type" : "string"
                      },
                      "level" : {
                        "type" : "string",
                        "enum" : [ "trace", "debug", "info", "warn", "error" ]
                      },
                      "additivity" : {
                        "type" : "boolean"
                      },
                      "AppenderRef" : {
                        "type" : [ "array", "string" ]
                      }
                    }
                  }
                },
                "Root" : {
                  "type" : "object",
                  "additionalProperties" : false,
                  "properties" : {
                    "level" : {
                      "type" : "string",
                      "default" : "info",
                      "description" : "Default: info",
                      "enum" : [ "trace", "debug", "info", "warn", "error" ]
                    },
                    "AppenderRef" : {
                      "type" : [ "array", "string" ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}